# squash commits to merge base "develop" or parameter
function gitsc() {
        if [ -n "$1" ]
        then
                git reset $(git merge-base "$1" $(git branch --show-current))
        else
                git reset $(git merge-base develop $(git branch --show-current))
        fi
}
